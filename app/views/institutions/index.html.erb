<div class="tables">
  <h1>Institutions</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>CNPJ</th>
        <th>Type</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @institutions.each do |institution|%>
        <tr>
          <td><%= institution.name %></td>
          <td><%= institution.cnpj %></td>
          <td><%= institution.institution_type %></td>
          <td><%= link_to "Show", institution, class:"button button-show" %></td>
          <td><%= link_to "Edit", edit_institution_path(institution) , class:"button button-edit" %></td>
          <td><%= button_to "Destroy", institution, form: {data: {turbo_confirm: "Are you sure?"}}, method: :delete %></td>   
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="6"><%= link_to "+ New institution", new_institution_path %></th>
      </tr>
    </tfoot>
  </table>
</div>
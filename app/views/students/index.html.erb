<div class="tables">
  <h1>Students</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>CPF</th>
        <th>Birth Date</th>
        <th>Phone</th>
        <th>Gender</th>
        <th>Bill Payment Type</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student|%>
        <tr>
          <td><%= student.name %></td>
          <td><%= student.cpf %></td>
          <td><%= student.birth_date.strftime("%d/%m/%Y") %></td>
          <td><%= student.phone %></td>
          <td><%= student.gender %></td>
          <td><%= student.bill_payment_type %></td>
          <td><%= link_to "Show", student, class:"button button-show" %></td>
          <td><%= link_to "Edit", edit_student_path(student) , class:"button button-edit" %></td>
          <td><%= button_to "Destroy", student, form: {data: {turbo_confirm: "Are you sure?"}}, method: :delete %></td>
        </tr>
        <% if student == @students.last %>
          <tr>
            <td colspan="9"><%= link_to "+ New student", new_student_path, class:"link_new" %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>


